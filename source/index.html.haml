- if paginate && num_pages > 1
  %p
    Page #{page_number} of #{num_pages}
  - if prev_page
    %p= link_to 'Previous page', prev_page

- page_articles.each_with_index do |article, i|
  %article
    .metadata
      %strong
        = article.date.strftime('%b %e')
      %small
        - article.tags.each do |tag|
          = link_to tag, tag_path(tag), class: 'text-muted'
    %h2= link_to article.title, article
    = article.summary

    %a= link_to 'Read more &raquo;', article, class: 'read-more'

- if paginate
  - if next_page
    %p= link_to 'Next page', next_page